{
	"explorer.sortOrder": "type",
	"explorer.autoRevealExclude": {
		"**/node_modules": true,
		".svelte-kit": true,
		"$houdini": true,
		"build": true
	},
	////////// scm //////////
	"scm.defaultViewMode": "tree",
	"conventionalCommits.scopes": ["workspace", "actions", "lint", "deps", "docs", "policy", "provider"],
	////////// Editor //////////
	"editor.autoIndent": "full",
	"editor.lineHeight": 2,
	"editor.codeActionsOnSave": {
		"source.organizeImports": true,
		"source.fixAll": true
	},
	"editor.cursorBlinking": "solid",
	"editor.cursorSmoothCaretAnimation": true,
	"editor.cursorStyle": "line",
	// "editor.fontSize": 16, // or "window.zoomLevel": 1,
	"editor.fontFamily": " SourceCodePro-Regular, FiraCode-Retina, Menlo",
	"editor.fontLigatures": true,
	"editor.formatOnPaste": true,
	"editor.formatOnType": false,
	"editor.formatOnSave": true,
	// "editor.letterSpacing": 0.5,
	// "editor.lineHeight": 25,
	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "none",
	"editor.tabCompletion": "on",
	"editor.tabSize": 2,
	"editor.wordWrap": "off",
	"editor.linkedEditing": true,
	// To make tailwindcss-intellisense work in .svelte files
	"editor.quickSuggestions": {
		"comments": false,
		"strings": true
	},
	////////// Search //////////
	"search.exclude": {
		"node_modules": true,
		".svelte-kit": true,
		"coverage": true,
		"build": true
	},
	////////// Terminal //////////
	"terminal.integrated.fontFamily": "MesloLGM Nerd Font Mono, Monospace",
	// "terminal.integrated.fontSize": 16, // or "window.zoomLevel": 1,
	////////// Workbench //////////
	"workbench.editor.limit.enabled": true,
	"workbench.editor.limit.value": 8,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.editor.labelFormat": "short",
	////////// File settings //////////
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 1000,
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/*.js": {
			"when": "$(basename).ts"
		},
		"**/*.js.map": {
			"when": "$(basename)"
		}
	},
	"files.associations": {
		"Makefile*": "makefile"
	},
	// "files.hotExit": "onExit",
	"files.defaultLanguage": "go",
	"files.trimTrailingWhitespace": true,
	////////// GoLang //////////
	"go.testFlags": ["-v", "-count=1"],
	"go.testTimeout": "5s",
	"go.useLanguageServer": true,
	"go.lintTool": "golangci-lint",
	"go.lintFlags": ["--fast", "--config=.github/linters/.golangci.yml"],
	////////// Rust //////////
	"rust-analyzer.inlayHints.chainingHints": false,
	"rust-analyzer.inlayHints.typeHints": false,

	////////// Terraform //////////
	"terraform.telemetry.enabled": false,
	"terraform.indexing": {
		"enabled": true,
		"liveIndexing": false,
		"delay": 500,
		"exclude": [".terraform/**/*", "**/.terraform/**/*"]
	},
	"terraform.languageServer": {
		"external": true,
		"args": ["serve"]
	},

	////////// Spell checker //////////
	"cSpell.language": "en",
	// Map spelling errors to Hints so that they don't show up in the Problems pane.
	"cSpell.diagnosticLevel": "Hint",
	// This makes the spell checker more lenient when two words are jammed together.
	"cSpell.allowCompoundWords": true,
	// This is the default list of filetypes to spell check except with proto3 added.
	"cSpell.enabledLanguageIds": ["asciidoc", "css", "go", "html", "javascript", "json", "markdown", "plaintext", "python", "rust", "scss", "text", "typescript", "typescriptreact", "yml", "proto3", "svelte"],
	// This is a whitelist of words that we think we spell just fine.
	"cSpell.userWords": ["grpc", "log", "proto", "protobuf", "timeout"],
	"cSpell.ignorePaths": ["node_modules", "**/node_modules", "**/node_modules/**", ".git"],

	////////// svelte //////////
	"svelte.enable-ts-plugin": true,
	"svelte.plugin.svelte.format.config.svelteStrictMode": true,
	"svelte.plugin.svelte.defaultScriptLanguage": "ts",
	"svelte.plugin.svelte.compilerWarnings": {
		// "css-unused-selector": "ignore",
		// "a11y-label-has-associated-control": "ignore"
	},

	////////// vitest //////////
	"vitest.include": ["**/*.{test,spec}.{js,mjs,cjs,ts,mts,cts,jsx,tsx,svelte}"],
	"vitest.exclude": ["**/node_modules/**", "$houdini/**", "**/dist/**", "**/cypress/**", "**/.{idea,git,cache,output,temp}/**", "**/ignored.test.ts", "tests/**"],

	////////// tailwindCSS //////////
	"tailwindCSS.emmetCompletions": true,
	////////// eslint //////////
	"eslint.packageManager": "pnpm",
	"eslint.runtime": "node",
	"eslint.options": {
		"extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"]
	},
	"eslint.probe": ["javascript", "javascriptreact", "typescript", "typescriptreact", "html", "vue", "markdown", "svelte", "yaml", "mdx"],
	"eslint.validate": ["javascript", "javascriptreact", "svelte"],

	////////// Proto //////////
	"clang-format.style": "google",
	"protoc": {
		"options": ["--proto_path=${workspaceRoot}/proto", "--proto_path=${env.GOPATH}/src"]
	},
	////////// Prettier //////////
	// Make sure we're using prettier for all filetypes
	// Need this because we need to override the default json and svelte formatters that folks might have configured
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"files.trimTrailingWhitespace": false
	}
}
